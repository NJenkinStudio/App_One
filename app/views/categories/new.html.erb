<h1 class="text-center mt-4">Create a new One Category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow-lg p-4 mb-5 bg-secondary rounded", 
                                    local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name:", class: "col-2 col-form-label text-warning" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow-lg rounded mt-3", 
                                    placeholder: "Enter a name:" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-success btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="mb-3">
    <%= link_to "Cancel", root_path, class: "btn btn-outline-danger", 
        data: { confirm: "Are you sure you wish to Cancel?"} %>
  </div>
</div>
