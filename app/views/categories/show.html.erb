<h1 class="text-center mt-4"><%= @category.name %></h1>


  <div class="text-center mt-4">
    <% if logged_in? && current_user.admin? %>
      <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-outline-info btn-sm" %>
    <% end %>
    <% if logged_in? %>
      <%= link_to "Write your own Story", new_article_path, class: "btn btn-outline-danger btn-sm" %>
    <% else %>
      <%= link_to "Write your own Story", signup_path, class: "btn btn-outline-danger btn-sm" %>
    <% end %>
  </div>


<h3 class="text-center mt-4">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

