<h1 class="text-center mt-4">App-Oners</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-center">
      <div class="col-6 mt-4">
        <div class="card text-center shadow-lg p-1 mb-5 bg-white rounded">
           <div class="card-header font-italic font-weight-light">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%=link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text" style= "color: black;"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-warning btn-sm" %>
            <%= link_to "View Profile", user, class: "btn btn-outline-info btn-sm" %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>