<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow-lg p-4 mb-5 bg-secondary rounded", 
                                    local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-warning" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow-lg rounded", 
                                    placeholder: "Enter a Username:" %>
          </div>
         </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-warning" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow-lg rounded ", 
                                      placeholder: "Enter your email address:" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-warning" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow-lg rounded ", 
                                      placeholder: "Choose a password:" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-success btn-sm") %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="mb-3">
    <%= link_to "Cancel", root_path, class: "btn btn-outline-danger", 
        data: { confirm: "Are you sure you wish to Cancel?"} %>
  </div>
</div>
