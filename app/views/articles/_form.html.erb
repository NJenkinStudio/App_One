<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
     <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow-lg p-4 mb-5 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-warning" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow-lg rounded", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-warning" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 14, class: "form-control shadow-lg rounded ", placeholder: "Description of Article" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-warning btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="mb-3">
    <%= link_to "Cancel", articles_path, class: "btn btn-outline-danger", data: { confirm: "Are you sure you wish to Cancel and return to Articles?"} %>
  </div>
</div>