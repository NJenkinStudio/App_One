<%= render 'errors' %>

<%= form_with(model: @article, local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_area :description, rows: 14, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.submit class: "btn btn-outline-dark" %>
  </div>
  
<% end %>

<%= link_to 'Cancel', articles_path, data: { confirm: "Are you sure you wish to Cancel and return to Articles?"} %>